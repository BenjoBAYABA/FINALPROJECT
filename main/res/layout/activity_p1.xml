<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"


    android:background="@drawable/_624541570807"
    android:gravity="center|top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="CHOOSE PLANT"
        android:textSize="34sp" />

    <ScrollView
        android:layout_width="385dp"
        android:layout_height="665dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="295dp"
                android:layout_height="156dp"
                app:srcCompat="@drawable/_624584058283" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="288dp"
                android:layout_height="123dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/_624584058280" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="285dp"
                android:layout_height="123dp"
                app:srcCompat="@drawable/_624584058276" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="283dp"
                android:layout_height="123dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/_624584058271" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="282dp"
                android:layout_height="123dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/_624584058266" />

            <Button
                android:id="@+id/b5"
                android:layout_width="263dp"
                android:layout_height="66dp"

                android:text="EXIT"
                android:textColor="#E1E6EA"
                android:textSize="34sp"
                app:backgroundTint="#49569E" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>